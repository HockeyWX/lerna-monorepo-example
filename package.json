{
  "name": "@jlegrone/lerna-monorepo-example",
  "description": "Develop node modules inside a monorepo with lerna and conventional commits.",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlegrone/lerna-monorepo-example.git"
  },
  "author": "Jacob LeGrone <dev@jacoblegrone.com> (https://jacoblegrone.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jlegrone/lerna-monorepo-example/issues"
  },
  "homepage": "https://github.com/jlegrone/lerna-monorepo-example#readme",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".cz-config.js"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ],
      "scope": {
        "required": true,
        "allowed": [
          "redux-lib",
          "web",
          "mobile",
          "macos",
          "repo"
        ],
        "validate": true,
        "multiple": true
      },
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": "\nTry running `yarn commit` for help.",
      "autoFix": true
    }
  },
  "scripts": {
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg",
    "learna": "lerna-wizard",
    "lerna": "lerna",
    "postinstall": "lerna bootstrap --hoist",
    "release": "lerna publish --conventional-commits",
    "test": "lerna run test",
    "test:watch": "lerna run --parallel test:watch",
    "watch": "lerna run --parallel watch"
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "cz-customizable": "^5.0.0",
    "husky": "^0.14.3",
    "lerna": "^2.0.0",
    "lerna-wizard": "^1.0.9",
    "validate-commit-msg": "^2.12.2"
  }
}
